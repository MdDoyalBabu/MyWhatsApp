<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".LoginActivity">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/login_images_id"
                android:layout_width="match_parent"
                android:layout_height="250dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:scaleType="fitXY"
                android:src="@drawable/images">

            </ImageView>


            <EditText
                android:drawableStart="@drawable/email_icon"
                android:id="@+id/login_email_id"
                android:inputType="textEmailAddress"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/login_images_id"
                android:layout_alignParentStart="true"
                android:layout_marginLeft="17dp"
                android:layout_marginTop="20dp"
                android:layout_marginRight="17dp"
                android:background="@drawable/inputs"
                android:hint="Email"
                android:padding="10dp" />

            <EditText

                android:drawableStart="@drawable/password_icon"
                android:id="@+id/login_password_id"
                android:inputType="textPassword"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/login_email_id"
                android:layout_alignParentStart="true"
                android:layout_marginLeft="17dp"
                android:layout_marginTop="20dp"
                android:layout_marginRight="17dp"
                android:background="@drawable/inputs"
                android:hint="Password"
                android:padding="10dp" />

            <TextView

                android:textAlignment="textEnd"
                android:textStyle="bold"
                android:layout_centerHorizontal="true"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="21sp"
                android:text="Forget Password?"
                android:id="@+id/login_forget_password_Link"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/login_password_id"
                android:layout_marginLeft="17dp"
                android:layout_marginTop="2dp"
                android:layout_marginRight="23dp" />

            <Button
                android:textAllCaps="false"
                android:layout_marginTop="15dp"
                android:textColor="@android:color/background_light"
                android:textSize="25sp"
                android:text="Login"
                android:background="@drawable/button"
                android:layout_marginLeft="18dp"
                android:layout_marginRight="18dp"
                android:layout_below="@id/login_forget_password_Link"
                android:id="@+id/login_button_id"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <TextView

                android:textAlignment="center"
                android:textStyle="bold"
                android:layout_centerHorizontal="true"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="21sp"
                android:text="Need New Account?"
                android:id="@+id/login_need_an_account_id"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/login_button_id"
                android:layout_marginLeft="17dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="23dp" />

            <TextView

                android:id="@+id/logining_using_Email_Id"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/login_need_an_account_id"
                android:layout_centerHorizontal="true"
                android:layout_marginLeft="17dp"
                android:layout_marginRight="23dp"
                android:text="or Login using email"
                android:layout_marginTop="2dp"
                android:textAlignment="center"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="21sp" />

            <Button
                android:textAllCaps="false"
                android:layout_marginTop="15dp"
                android:textColor="@android:color/background_light"
                android:textSize="15sp"
                android:text="Phone"
                android:background="@drawable/button"
                android:layout_marginLeft="18dp"
                android:layout_marginRight="18dp"
                android:layout_below="@id/logining_using_Email_Id"
                android:id="@+id/login_Phone_button_id"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

        </RelativeLayout>
    </ScrollView>


</RelativeLayout>