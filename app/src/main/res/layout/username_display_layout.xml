<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="15dp"
        android:orientation="horizontal">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/user_profile_images_id"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:src="@drawable/profile_icon" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_marginStart="10dp"
                    android:id="@+id/user_profile_nameTextview_id"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="9dp"
                    android:text="user name"
                    android:textAlignment="textStart"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <ImageButton
                    android:id="@+id/user_online_status_icon"
                    android:layout_width="18dp"
                    android:layout_height="11dp"
                    android:layout_marginTop="5dp"
                    android:src="@drawable/online_icon"
                    android:visibility="invisible" />

            </LinearLayout>

            <TextView
                android:layout_marginStart="8dp"
                android:id="@+id/user_status_id"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="user status"
                android:textAlignment="textStart"
                android:textSize="18sp" />

            <LinearLayout
                android:layout_marginTop="2dp"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <Button
                    android:layout_marginStart="5dp"
                    android:textSize="12sp"
                    android:textStyle="bold"
                    android:id="@+id/reqeust_accept_button_Id"
                    android:background="@android:color/holo_green_light"
                    android:textColor="@android:color/background_light"
                    android:text="Accept"
                    android:visibility="invisible"
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"/>

                     <Button

                         android:visibility="invisible"
                             android:layout_marginStart="10dp"
                             android:textAllCaps="false"
                            android:textSize="12sp"
                            android:textStyle="bold"
                            android:id="@+id/reqeust_cancel_button_Id"
                            android:background="@android:color/holo_red_light"
                            android:textColor="@android:color/background_light"
                            android:text="Cancel"
                            android:layout_width="wrap_content"
                            android:layout_height="30dp"/>

            </LinearLayout>

        </LinearLayout>


    </LinearLayout>


</RelativeLayout>