<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/profile_activity"
    tools:context=".UserProfileActivity">


    <de.hdodenhof.circleimageview.CircleImageView

        android:id="@+id/visit_profile_image_Id"
        android:src="@drawable/profile_icon"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="100dp" />

    <TextView
        android:textSize="20sp"
        android:textAlignment="center"
        android:layout_centerHorizontal="true"
        android:id="@+id/visit_userName_id"
        android:layout_below="@id/visit_profile_image_Id"
        android:textAllCaps="false"
        android:textStyle="bold"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="10dp"
        android:text="user name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <TextView
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="20dp"
        android:textSize="25sp"
        android:textAlignment="center"
        android:layout_centerHorizontal="true"
        android:id="@+id/visit_userStatus_id"
        android:layout_below="@id/visit_userName_id"
        android:textAllCaps="false"
        android:textStyle="bold"
        android:text="hi i am using coding cafe Android App"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <Button
        android:textStyle="bold"
        android:textAllCaps="false"
        android:id="@+id/visit_send_message_Id"
        android:textSize="20sp"
        android:layout_marginRight="65dp"
        android:layout_marginLeft="65dp"
        android:textColor="@android:color/background_light"
        android:layout_marginTop="20dp"
        android:layout_below="@id/visit_userStatus_id"
        android:text="Send Message"
        android:background="@drawable/button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <Button
        android:visibility="invisible"
        android:textStyle="bold"
        android:textAllCaps="false"
        android:id="@+id/visit_decline_message_Id"
        android:textSize="20sp"
        android:layout_marginRight="65dp"
        android:layout_marginLeft="65dp"
        android:textColor="@android:color/background_light"
        android:layout_marginTop="20dp"
        android:layout_below="@id/visit_send_message_Id"
        android:text="Cancel Chat Request"
        android:background="@drawable/button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

</RelativeLayout>